<!DOCTYPE html>
<html>
  <head>
    <title>BoardGameFun</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">

    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-white">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>board-game.hun</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if admin_signed_in? %>
              <li class="nav-item mr-3">
                <%= link_to "ゲーム一覧", admin_games_path, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "会員一覧", admin_customers_path, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "ログアウト", destroy_admin_session_path, method: :delete, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <% elsif customer_signed_in? %>
              <li class="nav-item mr-5">
                ようこそ、<strong><%= current_customer.name %></strong>さん！
              </li>

              <li class="nav-item mr-3">
                <%= link_to "マイページ", homes_about_path, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "ゲーム一覧", homes_about_path, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "ログアウト", destroy_customer_session_path, method: :delete, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <% else %>
              <li class="nav-item mr-3">
                <%= link_to "About", homes_about_path, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "ゲーム一覧", homes_about_path, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "新規登録", new_customer_registration_path, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <li class="nav-item mr-3">
                <%= link_to "ログイン", new_customer_session_path, class: "btn btn-outline-dark nav-link text-dark" %>
              </li>

              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
      <%= yield %>
  </body>
</html>
