<div class="container">
  <div class="row">
    <div class="col">
      <h1>お気に入りのボードゲームを紹介しよう</h1>
      <%= form_with model: @game do |f| %>
        <h4>ゲーム名</h4>
        <%= f.text_field :title %>
        <h4>最大参加人数</h4>
        <%= f.number_field :max_players, in: 1..100 %>人
        <h4>最少参加人数</h4>
        <%= f.number_field :min_players, in: 1..100 %>人
        <h4>ルール説明とアピールポイント</h4>
        <%= f.text_area :body, rows: 20, cols: 160%>
        <%= f.submit '投稿' %>
      <% end %>
    </div>
  </div>
</div>